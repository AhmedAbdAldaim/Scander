<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >
        <com.example.mainkotiln.text_slider_font
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/product_name"
            android:gravity="center"
            android:background="@color/bink"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Orders"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layoutDirection="rtl"
                android:layout_marginBottom="0dp"
                android:layout_alignParentRight="true"
                >



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="10dp"
                            android:gravity="right">
                            <com.example.mainkotiln.text_slider_font
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/status1"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:textColor="@color/bink"
                                android:textStyle="bold"
                                android:text="status"
                                />
                            <com.example.mainkotiln.text_slider_font
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/order_status1"
                                android:gravity="center"
                                android:layout_marginTop="0dp"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text=" Order Done"
                                />

                        </LinearLayout>
                        <com.example.mainkotiln.text_slider_font
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:id="@+id/details1"
                            android:background="#240C6A"
                            android:onClick="detailes"
                            android:layout_marginRight="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:text="Order Detailes"/>

                            <com.example.mainkotiln.text_slider_font1
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:id="@+id/Date1"
                                android:layout_marginLeft="10dp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:text="2-Mar-2020"/>

                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="right">
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/status2"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="status"
                                    />
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/order_status2"
                                    android:gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text=" In the Road"
                                    />

                            </LinearLayout>
                            <com.example.mainkotiln.text_slider_font
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:id="@+id/details2"
                                android:background="#240C6A"
                                android:layout_marginRight="10dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:text="Order Detailes"/>

                            <com.example.mainkotiln.text_slider_font1
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:id="@+id/Date2"
                                android:layout_marginLeft="10dp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:text="22-Dec-2020"/>

                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="right">
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/status3"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="status"
                                    />
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/order_status3"
                                    android:gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text=" Order Done"
                                    />

                            </LinearLayout>
                            <com.example.mainkotiln.text_slider_font
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:id="@+id/details3"
                                android:background="#240C6A"
                                android:layout_marginRight="10dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:text="Order Detailes"/>

                            <com.example.mainkotiln.text_slider_font1
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:id="@+id/Date3"
                                android:layout_marginLeft="10dp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:text="24-Api-2019"/>

                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="right">
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/status4"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="status"
                                    />
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/order_status4"
                                    android:gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="In the Stitage"
                                    />

                            </LinearLayout>
                            <com.example.mainkotiln.text_slider_font
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:id="@+id/details4"
                                android:background="#240C6A"
                                android:layout_marginRight="10dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:text="Order Detailes"/>

                            <com.example.mainkotiln.text_slider_font1
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:id="@+id/Date4"
                                android:layout_marginLeft="10dp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:text="2-Mar-2020"/>

                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>





            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>