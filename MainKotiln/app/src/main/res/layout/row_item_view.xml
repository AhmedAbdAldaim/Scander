<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#16F1EDED"
    android:layoutDirection="rtl"
    android:layout_marginTop="20dp"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_favorite_border_black_24dp"/>
            <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/doretouos"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/img"/>

        <com.example.mainkotiln.text_slider_font
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Doriutos"
            android:textColor="@color/bink"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:textStyle="bold">

        </com.example.mainkotiln.text_slider_font>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <com.example.mainkotiln.text_slider_font
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CDC8C8"
                    android:textSize="15sp"
                    android:id="@+id/list_price"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:text="200ج.س"
                    android:foreground="@drawable/text_price_line"
                    android:layout_gravity="center"
                    ></com.example.mainkotiln.text_slider_font>
                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
/>                <com.example.mainkotiln.text_slider_font
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                android:id="@+id/price"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:text="150ج.س"
                android:layout_gravity="center"
                ></com.example.mainkotiln.text_slider_font>
            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/plius"
         android:src="@drawable/ic_plus">
    </ImageView>

    <com.example.mainkotiln.text_slider_font
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:inputType="number"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"></com.example.mainkotiln.text_slider_font>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
    android:id="@+id/mins"
        android:src="@drawable/ic_minus">
    </ImageView>

</LinearLayout>
            <com.example.mainkotiln.button_slider_font
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bink"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Add To Cart"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>