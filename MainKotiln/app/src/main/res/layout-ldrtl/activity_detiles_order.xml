<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"

        >

        <com.example.mainkotiln.text_slider_font
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/product_name"
            android:gravity="center"
            android:background="@color/bink"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:layout_alignParentTop="true"
            android:text="تفاصيل الطلب"
            />





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layoutDirection="rtl"
                android:layout_marginBottom="0dp"
                android:layout_alignParentRight="true"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardtotal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        >
                        <com.example.mainkotiln.text_slider_font
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التاريخ : "
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />
                        <com.example.mainkotiln.text_slider_font
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-12-2020"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"

                        >



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true">
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price_name1"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="السعر"
                                    />
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price1"
                                    android:gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text=" 400 ج.س"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="right">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/doretouos"
                                    android:layout_marginTop="0dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/product_image1"/>
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/product_name1"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="17sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="دوريتويس"
                                    >
                                </com.example.mainkotiln.text_slider_font>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/lay_count1"

                                >
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/count_name1"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="الكمية"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    >
                                    <com.example.mainkotiln.text_slider_font
                                        android:id="@+id/count1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#000"
                                        android:text="2"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textSize="20sp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:textStyle="bold"></com.example.mainkotiln.text_slider_font>

                                </LinearLayout>

                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/remade"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"

                        >



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                >
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price_name2"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="السعر"
                                    />
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price2"
                                    android:gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text=" 200 ج.س"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="right">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/swiet"
                                    android:layout_marginTop="0dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/product_image2"/>
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/product_name2"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="17sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="تويكس"
                                    >
                                </com.example.mainkotiln.text_slider_font>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/lay_count2"

                                >
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/count_name2"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="الكمية"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    >



                                    <com.example.mainkotiln.text_slider_font
                                        android:id="@+id/count2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:text="5"
                                        android:textColor="#000"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></com.example.mainkotiln.text_slider_font>

                                </LinearLayout>

                            </LinearLayout>



                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/remade"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"

                        >



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                >
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price_name3"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="السعر"
                                    />
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price3"
                                    android:gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text=" 120 ج.س"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="right">
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/gift"
                                    android:layout_marginTop="0dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/product_image3"/>
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/product_name3"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="17sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="ساعة ذهبية"
                                    >
                                </com.example.mainkotiln.text_slider_font>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/lay_count3"

                                >
                                <com.example.mainkotiln.text_slider_font
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/count_name3"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/bink"
                                    android:textStyle="bold"
                                    android:text="الكمية"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    >


                                    <com.example.mainkotiln.text_slider_font
                                        android:id="@+id/count3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:textColor="#000"
                                        android:text="9"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></com.example.mainkotiln.text_slider_font>

                                </LinearLayout>

                            </LinearLayout>



                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/remade"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/cardtotal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        >
                        <com.example.mainkotiln.text_slider_font
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المجموع : "
                            android:textSize="20sp"
                            android:textColor="@color/bink"
                            />
                        <com.example.mainkotiln.text_slider_font
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2300 ج.س"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>