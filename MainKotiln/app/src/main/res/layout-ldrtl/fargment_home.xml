<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F0F0"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F0F0"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bink"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/header"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/scander"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/carts"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"

                        android:src="@drawable/ic_add_shopping_cart_black_24dp"/>
                    <com.example.mainkotiln.text_slider_font
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مرحبا احمد"
                        android:gravity="left"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/name_app"
                        android:textSize="20dp"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="20dp"
                    >
                    <com.example.mainkotiln.Edittext_font
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed"
                        android:hint="بحث"
                        android:background="@drawable/edittext_login"
                        android:drawableRight="@drawable/ic_search_black_24dp"
                        android:drawablePadding="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/card_chipess"
                    app:cardBackgroundColor="@color/white"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/chipese"
                        android:layout_marginTop="-20dp"
                        android:layout_gravity="center"
                        android:id="@+id/imgjk"/>
                    <com.example.mainkotiln.text_slider_font
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtt"
                        android:gravity="center"
                        android:layout_marginTop="85dp"
                        android:textSize="20sp"
                        android:textColor="@color/bink"
                        android:textStyle="bold"
                        android:text="شيبس"
                        >

                    </com.example.mainkotiln.text_slider_font>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/swiet"
                        android:layout_marginTop="-20dp"
                        android:layout_gravity="center"

                        android:id="@+id/img"/>
                    <com.example.mainkotiln.text_slider_font
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtj"
                        android:gravity="center"
                        android:layout_marginTop="85dp"
                        android:textSize="20sp"
                        android:textColor="@color/bink"
                        android:textStyle="bold"
                        android:text="حلويات"
                        >

                    </com.example.mainkotiln.text_slider_font>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"

                    app:cardBackgroundColor="@color/white"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/gift"
                        android:layout_marginTop="-20dp"
                        android:layout_gravity="center"

                        android:id="@+id/img_gift"/>
                    <com.example.mainkotiln.text_slider_font
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt"
                        android:gravity="center"
                        android:layout_marginTop="85dp"
                        android:textSize="20sp"
                        android:textColor="@color/bink"
                        android:textStyle="bold"
                        android:text="هدايا"
                        >

                    </com.example.mainkotiln.text_slider_font>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.example.mainkotiln.text_slider_font
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:layout_marginRight="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="#عروض التخفيضات"
                android:foreground="@drawable/text_price_line"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rce"
                android:paddingRight="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
