<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/lay_count1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_name"
                        android:gravity="center"
                        android:fontFamily="@font/ge_ss_two_medium"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/bink"
                        android:text="@string/Price_ar"
                        />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:fontFamily="@font/ge_ss_two_medium"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                      />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/doretouos"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/product_image"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/product"
                        android:fontFamily="@font/ge_ss_two_medium"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/bink"
                        >
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/lay_count1"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/count_name"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ge_ss_two_medium"
                        android:textSize="20sp"
                        android:textColor="@color/bink"
                        android:text="@string/Quintity_ar"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:onClick="plus"
                            android:src="@drawable/ic_plus"></ImageView>

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/pnu_medium"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="#000"
                            android:textSize="15sp"
                         ></TextView>

                        <ImageView
                            android:id="@+id/minus"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:onClick="mins"
                            android:src="@drawable/ic_minus"></ImageView>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_delete_forever_black_24dp">

                </ImageView>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>