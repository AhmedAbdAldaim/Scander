<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".select_chipess_type">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >
        <com.example.mainkotiln.text_slider_font
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/product_name"
            android:gravity="center"
            android:background="@color/bink"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="اختر نوعك"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                android:onClick="big_dort"
                android:layout_marginLeft="10dp"
                android:id="@+id/card_chipess"
                app:cardBackgroundColor="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/big_dort"
                        android:layout_marginTop="0dp"
                        android:onClick="big_dort"
                        android:layout_gravity="center"
                        android:id="@+id/imgjk"/>
                    <com.example.mainkotiln.text_slider_font
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtt"
                        android:gravity="center"
                        android:onClick="big_dort"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:background="@color/bink"
                        android:textStyle="bold"
                        android:text="كرتونة"
                        >

                    </com.example.mainkotiln.text_slider_font>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                android:onClick="smail_dort"
                android:layout_marginRight="10dp"
                android:id="@+id/card_chipess"
                app:cardBackgroundColor="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/doretouos"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:onClick="smail_dort"
                        android:id="@+id/doret_chipes"/>
                    <com.example.mainkotiln.text_slider_font
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtt"
                        android:gravity="center"
                        android:onClick="smail_dort"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:background="@color/bink"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="حبة"
                        >

                    </com.example.mainkotiln.text_slider_font>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>